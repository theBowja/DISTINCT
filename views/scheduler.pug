  body(style='height:100%-0px;padding:10px;')
    #calendar
    //- #dialog-form(title='Create new event')
    //-   form
    //-     fieldset
    //-       label(for='title') Title
    //-       input#title.text.ui-widget-content.ui-corner-all(type='text' name='title')
    //-       //- input(type='submit' tabindex='-1' style='position:absolute;top:-1000px')
    #addeventmodal.modal.fade(tabindex='-1')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button' data-dismiss='modal') &times;
            h4.modal-title Create new event
          .modal-body
            form#eventform(autocomplete='off')
              .form-group
                label.form-control-label(for='title') Event title:
                input#title.form-control(type='text' required)
              .form-group
                label.form-control-label(for='dtpstart') Start:
                input#dtpstart.form-control(type='text')
              .form-group
                label.form-control-label(for='dtpend') End:
                input#dtpend.form-control(type='text')
              input(type='submit' style='display:none;')
          .modal-footer
            button.btn.btn-primary(type='submit' onclick='$("#eventform").submit()') Create event
            button.btn.btn-default(type='button' data-dismiss='modal') Close